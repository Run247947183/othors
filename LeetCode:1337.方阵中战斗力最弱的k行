class Solution {
    public int[] kWeakestRows(int[][] mat, int k) {
        int r=mat.length;
        int c=mat[0].length;
     
        int cnt = 0;
        int[] res = new int[k];
        boolean[] flag = new boolean[r];
        for(int i=0; i<c; i++){
            for(int j=0; j<r; j++){
                if(!flag[j] && mat[j][i]==0 && cnt<k){

                    res[cnt] = j;
                    flag[j]=true;
                    cnt++;
                }
            }
        }

        int i=0;
        while(cnt<k){
            if(!flag[i]){
                res[cnt] = i;
                cnt++;
                flag[i]=true;
            }
            i++;
        }
        return res;
    }
}
